---
export interface Props {
  title?: string;
  description?: string;
  image?: string;
  link?: string;
}
const { title, description, image, link } = Astro.props;
---
<div class="flex items-center space-x-4 border p-4 rounded">
  {image && <img src={image} alt={title ?? "Image"} class="w-16 h-16 object-cover rounded" />}
  <div class="flex-1">
    <h2 class="text-lg font-bold">{title}</h2>
    {description && <p class="text-sm text-gray-600">{description}</p>}
    {link && (
      <a href={link} class="text-blue-500 hover:underline text-sm">
        詳細を見る
      </a>
    )}
  </div>
</div>
