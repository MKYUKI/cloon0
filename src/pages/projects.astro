// pages/projects.astro
import BaseLayout from '../src/layouts/BaseLayout.astro';
---

<BaseLayout title="プロジェクト - Cloon0" description="Masaki Kusakaのプロジェクト一覧">
  <div class="max-w-4xl mx-auto p-8">
    <h1 class="text-4xl font-bold mb-4">プロジェクト</h1>
    <div class="space-y-6">
      <div class="p-4 border rounded-lg">
        <h2 class="text-2xl font-semibold mb-2">プロジェクト名</h2>
        <p class="mb-2">プロジェクトの概要をここに記載します。</p>
        <a href="https://github.com/MKYUKI/project-repo" class="text-indigo-600 hover:underline">GitHubリポジトリ</a>
      </div>
      <!-- 他のプロジェクトも同様に追加 -->
    </div>
  </div>
</BaseLayout>
