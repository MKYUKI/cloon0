---
// pages/contact.astro
import BaseLayout from '../src/layouts/BaseLayout.astro';
---

<BaseLayout title="お問い合わせ - Cloon0" description="Cloon0へのお問い合わせ">
  <div class="max-w-2xl mx-auto p-8">
    <h1 class="text-4xl font-bold mb-6">お問い合わせ</h1>
    <form action="/api/contact" method="POST" class="space-y-6">
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700">名前</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-indigo-600"
        />
      </div>
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">メールアドレス</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-indigo-600"
        />
      </div>
      <div>
        <label for="message" class="block text-sm font-medium text-gray-700">メッセージ</label>
        <textarea
          id="message"
          name="message"
          rows="4"
          required
          class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-indigo-600"
        ></textarea>
      </div>
      <button
        type="submit"
        class="w-full py-2 bg-indigo-600 text-white font-semibold rounded hover:bg-indigo-700 transition"
      >
        送信
      </button>
    </form>
  </div>
</BaseLayout>
